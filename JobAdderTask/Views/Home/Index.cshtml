
<h1 id="top">Coding Task</h1>
<hr />

<div ng-controller="IndexController">

    <!--List of Jobs-->
    <div ng-repeat="job in jobs" class="clear-br" ng-cloak>
        <h3>
            <a ng-click="showJobDetails(job)" href="" class="text-title">
                {{job.title}}
            </a>
            <span ng-if="job.isNew" class="new">NEW</span>
        </h3>

        <p class="text-muted">
            Posted {{job.datePosted | fromNow}} &nbsp;|&nbsp;
            {{job.location}} {{job.country}}
        </p>

        <p class="text-muted2" ng-bind-html="job.description | snippets: 2 "></p>

        <a class="text-more" href="" ng-click="showJobDetails(job)"><b>READ MORE</b></a>
        <hr />
    </div>

    <!--UI Bootstrap Pagination-->
    <pagination total-items="total" items-per-page="filters.show" ng-model="filters.page" ng-change="pageChanged()" ng-show="total > filters.show"></pagination>

</div>

@section scripts{
    <script src="~/js/home/IndexController.js"></script>
}


